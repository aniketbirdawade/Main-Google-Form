<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

  <servlet>
    <servlet-name>CreateFormServlet</servlet-name>
    <servlet-class>com.formbuilder.CreateFormServlet</servlet-class>
</servlet>

<servlet-mapping>
    <servlet-name>CreateFormServlet</servlet-name>
    <url-pattern>/CreateFormServlet</url-pattern>
</servlet-mapping>

    <servlet>
        <servlet-name>AddQuestionServlet</servlet-name>
        <servlet-class>com.formbuilder.servlets.AddQuestionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddQuestionServlet</servlet-name>
        <url-pattern>/AddQuestionServlet</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>create_form.jsp</welcome-file>
    </welcome-file-list>
    
    <servlet>
    <servlet-name>ViewResponsesServlet</servlet-name>
    <servlet-class>com.formbuilder.servlets.ViewResponsesServlet</servlet-class>
</servlet>

<servlet-mapping>
    <servlet-name>ViewResponsesServlet</servlet-name>
    <url-pattern>/ViewResponsesServlet</url-pattern>
</servlet-mapping>

<welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
</welcome-file-list>



</web-app>
